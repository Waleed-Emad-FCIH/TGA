<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/outdoorgames" />

                <LinearLayout
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="sticky">
                    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:elevation="3dp">



                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_back_black_24dp"
                            android:id="@+id/imgBack"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_delete_black_24dp"
                            android:layout_gravity="right"
                            android:id="@+id/imgProgramDelete"
                            />

                        <ImageView
                            android:layout_gravity="right"
                            android:padding="5dp"
                            android:id="@+id/imgSendMsg"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/msg_icon" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/percentage_sign"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                            android:id="@+id/imgAddDiscount"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_mode_edit_black_24dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:id="@+id/imgProgramEdit"
                                />






                    </android.support.v7.widget.Toolbar>
                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    app:cardBackgroundColor="#00000000">

                    <!--<fragment xmlns:android="http://schemas.android.com/apk/res/android"-->
                        <!--xmlns:tools="http://schemas.android.com/tools"-->
                        <!--android:id="@+id/map"-->
                        <!--android:name="com.google.android.gms.maps.SupportMapFragment"-->
                        <!--android:layout_width="300dp"-->
                        <!--android:layout_height="80dp"-->
                        <!--android:layout_gravity="bottom|center"-->
                        <!--tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom|center"
                        android:background="@drawable/map"
                        />-->

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:tag="sticky">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Comming Soon"
                        android:textColor="#606674"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txtCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Comming Soon"
                        android:textColor="#adb3c0"
                        android:textSize="14dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOK NOW"
                    android:background="@drawable/round"
                    android:textColor="#fff"
                    android:padding="8dp"
                    android:id="@+id/txtBookNow"/>



            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/shadow_down">

            </LinearLayout>-->

            <LinearLayout
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llDistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/cardview_light_background">


                    <ImageView
                        android:padding="15dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_location_on_black_24dp"
                        android:elevation="2dp" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Map View"
                        android:textColor="#adb3c0"
                        android:textSize="11.1dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFavor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/cardview_light_background">

                    <ImageView
                        android:padding="15dp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_favorite_black_24dp"
                        android:elevation="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Add to Favourites"
                        android:textColor="#adb3c0"
                        android:textSize="11.1dp"
                        android:id="@+id/txtFavor"/>
                </LinearLayout>




                <!--<LinearLayout-->
                    <!--android:id="@+id/llAddPhotos"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:orientation="vertical">-->

                    <!--<ImageView-->
                        <!--android:padding="15dp"-->
                        <!--android:layout_width="45dp"-->
                        <!--android:layout_height="45dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:background="@drawable/ic_menu_black_24dp"-->
                        <!--android:elevation="2dp" />-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:text="More"-->
                        <!--android:textColor="#adb3c0"-->
                        <!--android:textSize="11.1dp" />-->
                <!--</LinearLayout>-->


            </LinearLayout>

            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14dp"
                    android:text="Program Description"
                    android:textColor="#606674"
                    android:textSize="16dp" />



                <TextView
                    android:id="@+id/progDesc"
                    android:letterSpacing="0.025"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Google Maps is a web mapping service developed by Google. It offers satellite imagery, street maps, 360° panoramic views of streets, real-time traffic conditions, and route planning for traveling by foot, car, bicycle, or public transportation.\nGoogle Maps is a web mapping service developed by Google. It offers satellite imagery, street maps, 360° panoramic views of streets, real-time traffic conditions, and route planning for traveling by foot, car, bicycle, or public transportation."
                    android:textColor="#606674"
                    android:textSize="12dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"
                android:padding="16dp"
                android:layout_margin="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/txtReviews"
                android:layout_margin="5dp"
                android:text="Reviews"/>




            <TextView
                android:id="@+id/reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Reviews\nReviews"/>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>